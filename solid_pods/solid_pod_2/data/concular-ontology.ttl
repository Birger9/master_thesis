@prefix : <http://localhost:3002/ontology#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix lindnerOnt: <https://lindner.example.com/ontology#> .

# --- Classes ---

:InventoryItem a owl:Class ;
    rdfs:label "Inventory Item"@en ;
    rdfs:comment "A general class for items in an inventory"@en .

:StorageLocation a owl:Class ;
    rdfs:label "Storage Location"@en ;
    rdfs:comment "A general class for storage location"@en .

:Assessment a owl:Class ;
    rdfs:label "Assessment"@en ;
    rdfs:comment "A general class for assessment applied to an inventory item."@en .

# --- Sub Classes ---

:ReusableAssessment a owl:Class ;
    rdfs:label "Reusable Assessment"@en ;
    rdfs:comment "An assessment indicating the item is suitable for reuse."@en ;
    rdfs:subClassOf :Assessment .

:RecyclableAssessment a owl:Class ;
    rdfs:label "Recyclable Assessment"@en ;
    rdfs:comment "An assessment indicating the item is suitable for recycling."@en ;
    rdfs:subClassOf :Assessment .

:DamagedAssessment a owl:Class ;
    rdfs:label "Damaged Assessment"@en ;
    rdfs:comment "An assessment indicating the item is damaged beyond simple reuse or recycling."@en ;
    rdfs:subClassOf :Assessment .

# --- Properties ---

:itemIdentifier a owl:DatatypeProperty;
    rdfs:label "Item Identifier"@en ;
    rdfs:comment "A unique identifier for the item" @en ;
    rdfs:domain :InventoryItem;
    rdfs:range xsd:string .

:componentType a owl:ObjectProperty ;
    rdfs:label "Component Type"@en ;
    rdfs:comment "The specific type of the item" @en ;
    rdfs:domain :InventoryItem ;
    rdfs:range lindnerOnt:Product . 

:quantity a owl:DatatypeProperty ;
    rdfs:label "Quantity"@en ;
    rdfs:comment "The quantity of an item" @en ;
    rdfs:domain :InventoryItem ;
    rdfs:range xsd:integer .

:currentAssessment a owl:ObjectProperty ;
    rdfs:label "Current Assessment"@en ;
    rdfs:comment "The current assessment of an item." @en ;
    rdfs:domain :InventoryItem ;
    rdfs:range :Assessment . 

:isAvailableForReuse a owl:DatatypeProperty ;
    rdfs:label "Is Available For Reuse"@en ;
    rdfs:comment "Tells whether an item is available for reuse" @en ;
    rdfs:domain :InventoryItem ;
    rdfs:range xsd:boolean . 

:storedAt a owl:ObjectProperty ;
    rdfs:label "Stored At"@en ;
    rdfs:comment "Where items are stored" @en ;
    rdfs:domain :InventoryItem ;
    rdfs:range :StorageLocation .

:warehouseName a owl:DatatypeProperty ;
    rdfs:label "Warehouse Name"@en ;
    rdfs:comment "The name of the warehouse" @en ;
    rdfs:domain :StorageLocation ;
    rdfs:range rdfs:Literal .