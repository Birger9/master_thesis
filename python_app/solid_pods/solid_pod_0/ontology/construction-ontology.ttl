@prefix con: <http://solid-pod-0/ontology#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# --- Classes ---

con:Product
    a owl:Class ;
    rdfs:label "Product"@en ;
    rdfs:comment "General concept of a product used in construction."@en ;
    rdfs:subClassOf product:Product .

con:Component
    a owl:Class ;
    rdfs:label "Component"@en ;
    rdfs:comment "A component or part of a product."@en ;
    rdfs:subClassOf con:Product .

con:InventoryItem
    a owl:Class ;
    rdfs:label "Inventory Item"@en ;
    rdfs:comment "An item stored in inventory for construction."@en .

con:StorageLocation
    a owl:Class ;
    rdfs:label "Storage Location"@en ;
    rdfs:comment "A physical location where inventory items are stored."@en .

con:Assessment
    a owl:Class ;
    rdfs:label "Assessment"@en ;
    rdfs:comment "An evaluation or condition of an inventory item."@en .

con:Stakeholder
    a owl:Class ;
    rdfs:label "Stakeholder"@en ;
    rdfs:comment "An organization or party involved in the logistics process."@en .

con:LogisticsCondition
    a owl:Class ;
    rdfs:label "Logistics Condition"@en ;
    rdfs:comment "A specific condition or requirement governing the take-back of components. "@en .

# --- Assessment Subclasses ---

con:ReusableAssessment
    a owl:Class ;
    rdfs:label "Reusable Assessment"@en ;
    rdfs:comment "Indicates the item is suitable for reuse."@en ;
    rdfs:subClassOf con:Assessment .

con:RecyclableAssessment
    a owl:Class ;
    rdfs:label "Recyclable Assessment"@en ;
    rdfs:comment "Indicates the item is suitable for recycling."@en ;
    rdfs:subClassOf con:Assessment .

con:DamagedAssessment
    a owl:Class ;
    rdfs:label "Damaged Assessment"@en ;
    rdfs:comment "Indicates the item is damaged beyond reuse or recycling."@en ;
    rdfs:subClassOf con:Assessment .

# --- Properties ---

con:itemIdentifier
    a owl:DatatypeProperty ;
    rdfs:label "Item Identifier"@en ;
    rdfs:comment "Unique identifier for an inventory item."@en ;
    rdfs:domain con:InventoryItem ;
    rdfs:range xsd:string .

con:componentType
    a owl:ObjectProperty ;
    rdfs:label "Component Type"@en ;
    rdfs:comment "Links an inventory item to its component type."@en ;
    rdfs:domain con:InventoryItem ;
    rdfs:range con:Component .

con:quantity
    a owl:DatatypeProperty ;
    rdfs:label "Quantity"@en ;
    rdfs:comment "Number of units in the inventory item."@en ;
    rdfs:domain con:InventoryItem ;
    rdfs:range xsd:integer .

con:currentAssessment
    a owl:ObjectProperty ;
    rdfs:label "Current Assessment"@en ;
    rdfs:comment "The current assessment of an inventory item."@en ;
    rdfs:domain con:InventoryItem ;
    rdfs:range con:Assessment .

con:isAvailableForReuse
    a owl:DatatypeProperty ;
    rdfs:label "Is Available for Reuse"@en ;
    rdfs:comment "Whether the inventory item is available for reuse."@en ;
    rdfs:domain con:InventoryItem ;
    rdfs:range xsd:boolean .

con:storedAt
    a owl:ObjectProperty ;
    rdfs:label "Stored At"@en ;
    rdfs:comment "The storage location of an inventory item."@en ;
    rdfs:domain con:InventoryItem ;
    rdfs:range con:StorageLocation .

con:warehouseName
    a owl:DatatypeProperty ;
    rdfs:label "Warehouse Name"@en ;
    rdfs:comment "Name of the storage location."@en ;
    rdfs:domain con:StorageLocation ;
    rdfs:range xsd:string .

con:productID
    a owl:DatatypeProperty ;
    rdfs:label "Product ID"@en ;
    rdfs:comment "Unique identifier for any product or component."@en ;
    rdfs:domain con:Product ;
    rdfs:range xsd:string .

con:material
    a owl:DatatypeProperty ;
    rdfs:label "Material"@en ;
    rdfs:comment "Primary material composition of a component."@en ;
    rdfs:domain con:Component ;
    rdfs:range rdfs:Literal .

con:hasComponent
    a owl:ObjectProperty ;
    rdfs:label "Has Component"@en ;
    rdfs:comment "Links a product to its constituent components."@en ;
    rdfs:domain con:Product ;
    rdfs:range con:Component . 
    
con:pedestalGridSize
    a owl:DatatypeProperty ;
    rdfs:label "Pedestal Grid Size"@en ;
    rdfs:comment "The standard grid dimension (width x length in mm) for a raised-floor component."@en ;
    rdfs:domain con:Component ;
    rdfs:range xsd:string . 

con:isNonCombustible
    a owl:DatatypeProperty ;
    rdfs:label "Is Non-Combustible"@en ;
    rdfs:comment "Boolean: true if the componentâ€™s primary material is classified as non-combustible."@en ;
    rdfs:domain con:Component ;
    rdfs:range xsd:boolean . 

con:systemWeightMin
    a owl:DatatypeProperty ;
    rdfs:label "System Weight Minimum"@en ;
    rdfs:comment "Minimum weight (kg/m^2) of a floor component."@en ;
    rdfs:domain con:Component ;
    rdfs:range xsd:decimal .

con:systemWeightMax
    a owl:DatatypeProperty ;
    rdfs:label "System Weight Maximum"@en ;
    rdfs:comment "Maximum weight (kg/m^2) of a floor component."@en ;
    rdfs:domain con:Component ;
    rdfs:range xsd:decimal .

con:isFullyRecyclable
    a owl:DatatypeProperty ;
    rdfs:label "Is Fully Recyclable"@en ;
    rdfs:comment "Boolean: true if the component can be recycled in full."@en ;
    rdfs:domain con:Component ;
    rdfs:range xsd:boolean .

con:involvesStakeholder
    a owl:ObjectProperty ;
    rdfs:label "Involves Stakeholder"@en ;
    rdfs:comment "Links a LogisticsCondition to one or more Stakeholder instances."@en ;
    rdfs:domain con:LogisticsCondition ;
    rdfs:range con:Stakeholder .

con:hasLogisticsCondition
    a owl:ObjectProperty ;
    rdfs:label "Has Logistics Condition"@en ;
    rdfs:comment "Links a Component to its associated LogisticsCondition."@en ;
    rdfs:domain con:Component ;
    rdfs:range con:LogisticsCondition .








