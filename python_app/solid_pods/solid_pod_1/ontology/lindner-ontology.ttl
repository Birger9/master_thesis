@prefix lindnerOnt: <http://solid-pod-1/ontology#> .
@prefix con: <http://solid-pod-0/ontology#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# --- Classes ---

lindnerOnt:Product a owl:Class ;
    rdfs:label "Product"@en ;
    rdfs:comment "Company-specific product class."@en ;
    rdfs:subClassOf con:Product .

lindnerOnt:Component a owl:Class ;
    rdfs:label "Component"@en ;
    rdfs:comment "A type of product specific to Lindner."@en ;
    rdfs:subClassOf con:Component ;
    rdfs:subClassOf lindnerOnt:Product .

# --- Properties ---

lindnerOnt:productID a owl:DatatypeProperty ;
    rdfs:label "Product ID"@en ;
    rdfs:comment "A unique identifier for the product."@en ;
    rdfs:domain lindnerOnt:Product ;
    rdfs:range xsd:string ;
    rdfs:subPropertyOf con:itemIdentifier .

lindnerOnt:productFamily a owl:DatatypeProperty ;
    rdfs:label "Product Family"@en ;
    rdfs:comment "The family the product belongs to (e.g., NORTEC, LMD)."@en ;
    rdfs:domain lindnerOnt:Product ;
    rdfs:range rdfs:Literal .

lindnerOnt:productName a owl:DatatypeProperty ;
    rdfs:label "Product Name"@en ;
    rdfs:comment "The specific name of the product."@en ;
    rdfs:domain lindnerOnt:Product ;
    rdfs:range rdfs:Literal .

lindnerOnt:material a owl:DatatypeProperty ;
    rdfs:label "Material"@en ;
    rdfs:comment "The primary material composition of the component."@en ;
    rdfs:domain lindnerOnt:Component ;
    rdfs:range rdfs:Literal .